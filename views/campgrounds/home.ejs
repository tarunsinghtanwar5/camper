<% layout('layouts/boilerplate')%>
 <!-- home page cluster map -->
<div id="map" style="width: 100%; height: 500px"></div>                        
    
<h1>All the Camps:</h1>
    <p >
        <a class="btn btn-primary" href="/campgrounds/new">New Camp</a>
    </p>

    <% for(let camp of camps) {%>
        <div class="card mb-3">
            <div class="row">

                <div class="col-md-4">
                     <%if(camp.images.length) {%>
                    <img src="<%= camp.images[0].url %> " alt="" class="img-fluid">
                     <% }else {%>
                         <img class="img-fluid" alt=""
                src="https://res.cloudinary.com/camperimg/image/upload/v1627745233/Camper/hbnixuafv89um5oedtne.jpg">
            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                         <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %> 
                            </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

    <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const camps = {features:<%-JSON.stringify(camps) %>}

</script>
