 <% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control dark" type="text" id="title" name="campground[title]"
                    value="<%=camp.title %>" required>
                    <div class="valid-feedback">
       Great Name!
    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control dark" type="text" id="location" name="campground[location]"
                    value="<%=camp.location %>" required>
                    <div class="valid-feedback">
      Looks like a real location
    </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text dark" id="price-label">$</span>
                    <input type="text" class="form-control dark" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" value="<%=camp.price %>" required>
                        <div class="valid-feedback">
     Yaaay!
    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control dark" type="text" id="description"
                    name="campground[description]" required>
                    <%= camp.description%></textarea>
                    <div class="valid-feedback">
     Perfect!
    </div>
    <div class="input-group mb-3 mt-3">
  <input type="file" class="form-control dark" id="image" name="image" multiple>
  <label class="input-group-text dark" for="image">Upload Images</label>
</div>
            </div>
<div class="mb-3">
    <% camp.images.forEach(function(img,i){ %>
       <img src="<%=img.thumbnail %> " class="img-thumbnail" alt="">
       <div class="form-check-inline">
           <input type="checkbox" name="deleteImages[]" value=<%=img.filename%>  id="image-<%=i%>">
       </div>
    <label for="image-<%=i%>">Delete</label>
   <% }) %> 
</div>
            <div class="mb-3 d-grid">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
    

    </div>
</div>
